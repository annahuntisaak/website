---
import '../styles/global.css';

import { Image } from 'astro:assets';
import homeImg from '../assets/home.jpg';
import name from '../assets/name.png';

const pageTitle = "anna rose hunt-isaak";
---

<nav class = "vertical_home_navs">
	<a href="/research/">research</a>
	<a href="/traditional art/">traditional art</a>
	<a href="/photography/">photography</a>
	<a href="/contact/">contact</a>
</nav>


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>

		<style>

			/* NAVIGATION BUTTONS */
			.vertical_home_navs {
				/* placing navigation buttons where desired */
				position: absolute;
				display: flex;
  				flex-direction: column; 
				top: 30rem; 
				left: 6rem;

				/* font size and spacing between buttons and of the lettering */
  				font-size: 12px;
				letter-spacing: 4.5px;   
				gap: 3rem;  
				
				/* to prevent buttons from being underlined or changing color */
				text-decoration: none;
			}

			.vertical_home_navs a{
				text-decoration: none;
				color: inherit;
			}


			body { 
				margin: 0;
				width: 100%;
				max-width: none;
				padding: 4rem 4rem;
			}

			.home_image {
				position: absolute;
				display: block;
				top: 7rem;
				left: 27rem;
				right: auto; 
			}

			.name_image {
				display: block;
				margin-top: 0.5rem;
				margin-left: 0rem;
			}

			.home_text {
				line-height: 1.75;
				width: 325px; 
				position: absolute;
				top: 7rem;  
				left: 81.5rem;
				right: 6rem;                                   
			}

		</style>
	</head>

	<body>

		<Image
			src = {name}
			alt = "name logo"
			class = "name_image"
			height = {230} 
			quality={100}
		/>
		<Image
			src = {homeImg}
			alt = "me in Portland"
			class = "home_image"
			height = {600} 
			quality={100}
		/>

		<div class = "home_text">
			<p>
				I'm an undergraduate student researcher and multi-media artist, approaching my final year at McGill University.  Pursuing 
				my BASc in Cognitive Science, I focus primarily on neuroscience and computer science.
			</p>
			<p>
				I'm interested in exploring the complex intersections of human cognition and behavior, technology, art, 
				and design.  I hope to gain greater hands-on experience with the research and development of technologies
				that foster close, reciprocal relationships with their biological users and to discover the roles that 
				human-oriented design, aesthetics, and creative expression have to play in this world.
			</p>
			<p>
				On the weekends, you can find me baking, reading, and rediscovering my love for oil painting!
			</p>
		</div>

	</body>
</html>
