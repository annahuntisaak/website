---
import '../styles/global.css';

import { Image } from 'astro:assets';
import homeImg from '../assets/home/home.jpg';
import name from '../assets/home/name.png';

const pageTitle = "anna rose hunt-isaak";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>

		<style>
			/* Override Pico defaults for this page */
			body {
				padding: 2rem;
			}

			/* Mobile-first responsive layout */
			@media (min-width: 768px) {
				.home-content {
					display: grid;
					grid-template-columns: 250px 1fr 350px;
					gap: 3rem;
					align-items: center;
					max-width: 1400px;
					margin: 0 auto;
				}
				
				.vertical_home_navs {
					grid-column: 1;
					grid-row: 2;
				}
				
				.home_image {
					grid-column: 2;
					grid-row: 2;
					justify-self: center;
				}
				
				.home_text {
					grid-column: 3;
					grid-row: 2;
				}
				
				.name_image {
					grid-column: 1;
					grid-row: 1;
					margin-bottom: 2rem;
				}
			}
		</style>
	</head>

	<body>
		<div class="container home-content">
			<Image
				src = {name}
				alt = "name logo"
				class = "name_image signature-image"
				quality={100}
			/>
			
			<nav class = "vertical_home_navs nav-vertical">
				<a href="/research/">research</a>
				<a href="/traditional art/">traditional art</a>
				<a href="/photography/">photography</a>
				<a href="/contact/">contact</a>
			</nav>

			<Image
				src = {homeImg}
				alt = "me in Portland"
				class = "home_image"
				quality={100}
			/>

			<div class = "home_text">
				<p>
					I'm an undergraduate student researcher and multi-media artist, approaching my final year at McGill University.  Pursuing 
					my BASc in Cognitive Science, I focus primarily on neuroscience and computer science.
				</p>
				<p>
					I'm interested in exploring the complex intersections of human cognition and behavior, technology, art, 
					and design.  I hope to gain greater hands-on experience with the research and development of technologies
					that foster close, reciprocal relationships with their biological users and to discover the roles that 
					human-oriented design, aesthetics, and creative expression have to play in this world.
				</p>
				<p>
					On the weekends, you can find me baking, reading, and rediscovering my love for oil painting!
				</p>
			</div>
		</div>
	</body>
</html>
