---
import '../styles/global.css';

import { Image } from 'astro:assets';
import driveway from '../assets/traditional/driveway.jpeg'
import hand from '../assets/traditional/hand.jpeg';
import les from '../assets/traditional/les.jpeg';
import line from '../assets/traditional/line.jpeg';
import maine from '../assets/traditional/maine.jpg';
import pools from '../assets/traditional/pools.jpg';
import still from '../assets/traditional/still.jpeg';

const pageTitle = "traditional art";
---

<nav class="nav-horizontal">
	<a href="/">home</a>
	<a href="/research/">research</a>
	<a href="/traditional art/">traditional art</a>
	<a href="/photography/">photography</a>
	<a href="/contact/">contact</a>
</nav>


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>

	<style>
		/* Use Pico's responsive layout */
		body {
			padding-top: 4rem;
		}

		.gallery {
			max-width: 1200px;
			margin: 0 auto;
		}

		/* Responsive grid layouts */
		.gallery-grid {
			margin-bottom: 2rem;
		}

		/* Traditional art hover effects */
		.hover-container {
			position: relative;
			display: inline-block;
			width: 100%;
		}

		.hover-container img {
			width: 100%;
			height: auto;
			display: block;
			transition: opacity 0.5s ease;
		}

		.hover-text {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			opacity: 0;
			transition: opacity 0.5s ease;
			text-align: center;
			padding: 16px 32px;
			white-space: nowrap;
			color: rgb(68, 33, 9) !important;
			font-weight: 600;
			background: rgba(255, 246, 242, 0.9);
			border-radius: 4px;
		}

		.hover-container:hover img {
			opacity: 0.3;
		}

		.hover-container:hover .hover-text {
			opacity: 1;
		}

		/* Mobile adjustments */
		@media (max-width: 768px) {
			.gallery-row-2 {
				grid-template-columns: 1fr !important;
			}
			
			.hover-text {
				font-size: 0.9rem;
				padding: 8px 16px;
			}
		}
	</style>


	<body>
		<div class="container gallery">

			<div class="gallery-grid gallery-row-1">
				<div class="hover-container">
					<Image src={les} alt="leslie" quality={100}/>
					<div class="hover-text">cotton linter<br>acrylic</div>
				</div>
			</div>
			

			<div class="gallery-grid gallery-row-1">
				<div class="hover-container">
					<Image src={line} alt="line" quality={100}/>
					<div class="hover-text">gouache<br>colored pencil<br>chalk pastel</div>
				</div>	
			</div>


			<div class="gallery-grid gallery-row-2">
				<div class="hover-container">
					<Image src={driveway} alt="front driveway" quality={100}/>
					<div class="hover-text">chalk pastel<br>gouache</div>
				</div>	

				<div class="hover-container">
					<Image src={pools} alt="philly litho print" quality={100}/>
					<div class="hover-text">lithographic ink</div>
				</div>	
			</div>


			<div class="gallery-grid gallery-row-1">
				<div class="hover-container">
					<Image src={hand} alt="hand" quality={100}/>
					<div class="hover-text">colored pencil<br>gouache</div>
				</div>	
			</div>


			<div class="gallery-grid gallery-row-2">
				<div class="hover-container">
					<Image src={still} alt="still life" quality={100}/>
					<div class="hover-text">chalk pastel</div>
				</div>	

				<div class="hover-container">
					<Image src={maine} alt="maine stamps" quality={100}/>
					<div class="hover-text">lioncuts<br>acrylic</div>
				</div>	


			</div>

		</div>

	</body>

</html>