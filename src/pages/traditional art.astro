---
import '../styles/global.css';

import { Image } from 'astro:assets';
import driveway from '../assets/traditional/driveway.jpeg'
import hand from '../assets/traditional/hand.jpeg';
import les from '../assets/traditional/les.jpeg';
import line from '../assets/traditional/line.jpeg';
import maine from '../assets/traditional/maine.jpg';
import pools from '../assets/traditional/pools.jpg';
import still from '../assets/traditional/still.jpeg';

const pageTitle = "traditional art";
---

<nav class = "top_navs">
	<a href="/">home</a>
	<a href="/research/">research</a>
	<a href="/traditional art/">traditional art</a>
	<a href="/photography/">photography</a>
	<a href="/contact/">contact</a>
</nav>


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>

	<style>

        /* NAVIGATION BUTTONS */
        .top_navs {
            /* placing navigation buttons where desired */
            position: sticky;
            top: 2rem;
            display: flex;
            flex-direction: row; 
            justify-content: center;
            margin-bottom: clamp(3rem, 6vw, 5rem);
            z-index: 10;

            /* spacing between buttons and of the lettering */
            font-size: clamp(10px, 1.8vw, 12px);
            gap: clamp(2rem, 4vw, 5rem);  
            letter-spacing: 4.5px;   
            
            /* to prevent buttons from being underlined or changing color */
            text-decoration: none;
        }

        .top_navs a{
            text-decoration: none;
            color: rgb(175, 159, 148);
		}


		/* RESPONSIVE GALLERY */
		.gallery {
			padding: 0 clamp(1rem, 4vw, 3rem);
			max-width: 1200px;
			margin: 0 auto;
		}

		.row {
			display: grid;
			justify-content: center;
			gap: clamp(1rem, 3vw, 2rem);
			margin-bottom: clamp(2rem, 4vw, 3rem);
			width: 100%;
		}

		/* Different grid layouts for different row types */
		.row-1 {
			grid-template-columns: 1fr;
			justify-items: center;
		}

		.row-2 {
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		}

		/* Mobile responsive adjustments */
		@media (max-width: 768px) {
			.top_navs {
				flex-wrap: wrap;
				gap: clamp(1rem, 3vw, 2rem);
				padding: 0 1rem;
			}

			.row-2 {
				grid-template-columns: 1fr;
			}
		}

		@media (max-width: 480px) {
			.top_navs {
				gap: 1rem;
				font-size: 10px;
				letter-spacing: 2px;
			}
		}


		/* IMAGE HOVERING */
		.container {
			position: relative;
			display: inline-block;
			width: 100%;
			max-width: 100%;
		}

		.image {
			opacity: 1;
			display: block;
			transition: .5s ease;
			backface-visibility: hidden;
			width: 100%;
			height: auto;
			object-fit: cover;
		}

		.middle {
			transition: .5s ease;
			opacity: 0;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			-ms-transform: translate(-50%, -50%)
		}

		.container:hover .image {
			opacity: 0.3;
		}

		.container:hover .middle {
			opacity: 1;
		}

		.text {
			color: inherit;
			font-size: inherit;
			padding: 16px 32px;
			text-align: center;
		}

	</style>


	<body>
		<div class="gallery">

			<div class="row row-1">
				<div class="container">
					<Image src={les} alt="leslie" class="image"/>
					<div class="middle">
					  <div class="text">cotton linter<br>acrylic</div>
					</div>
				</div>
			</div>
			

			<div class="row row-1">
				<div class="container">
					<Image src={line} alt="line" class="image"/>
					<div class="middle">
						<div class="text">gouache<br>colored pencil<br>chalk pastel</div>
					</div>
				</div>	
			</div>


			<div class="row row-2">
				<div class="container">
					<Image src={driveway} alt="front driveway" class="image"/>
					<div class="middle">
						<div class="text">chalk pastel<br>gouache</div>
					</div>
				</div>	

				<div class="container">
					<Image src={pools} alt="philly litho print" class="image"/>
					<div class="middle">
						<div class="text">lithographic ink</div>
					</div>
				</div>	
			</div>


			<div class="row row-1">
				<div class="container">
					<Image src={hand} alt="hand" class="image"/>
					<div class="middle">
						<div class="text">colored pencil<br>gouache</div>
					</div>
				</div>	
			</div>


			<div class="row row-2">
				<div class="container">
					<Image src={still} alt="still life" class="image"/>
					<div class="middle">
						<div class="text">chalk pastel</div>
					</div>
				</div>	

				<div class="container">
					<Image src={maine} alt="maine stamps" class="image"/>
					<div class="middle">
						<div class="text">lioncuts<br>acrylic</div>
					</div>
				</div>	


			</div>

		</div>

	</body>

</html>