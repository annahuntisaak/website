---
import '../styles/global.css';

import { Image } from 'astro:assets';
import instagram from '../assets/contact/insta_b.png';
import linkedin from '../assets/contact/linked_b.png';

const pageTitle = "contact";
---

<nav class = "top_navs">
	<a href="/">home</a>
	<a href="/research/">research</a>
	<a href="/traditional art/">traditional art</a>
	<a href="/photography/">photography</a>
	<a href="/contact/">contact</a>
</nav>


<html lang = "en"> 
    <head>
        <meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
    </head>

    <style>

        /* NAVIGATION BUTTONS */
        .top_navs {
            /* placing navigation buttons where desired */
            position: sticky;
            top: 2rem;
            display: flex;
            flex-direction: row; 
            justify-content: center;
            margin-bottom: clamp(3rem, 6vw, 5rem);
            z-index: 10;

            /* spacing between buttons and of the lettering */
            font-size: clamp(10px, 1.8vw, 12px);
            gap: clamp(2rem, 4vw, 5rem);  
            letter-spacing: 4.5px;   
            
            /* to prevent buttons from being underlined or changing color */
            text-decoration: none;
        }

        .top_navs a{
            text-decoration: none;
            color: rgb(175, 159, 148);
        }

        a {
            text-decoration: none;    
        }

        .social-links {
            display: flex;
            gap: 1rem;
            align-items: center;
            margin-top: 2rem;
        }

        .social-links .image {
            max-width: 60px;
            height: auto;
        }

        /* Mobile responsive adjustments */
        @media (max-width: 768px) {
            .top_navs {
                flex-wrap: wrap;
                gap: clamp(1rem, 3vw, 2rem);
                padding: 0 1rem;
            }

            .social-links {
                justify-content: center;
                flex-wrap: wrap;
            }
        }

        @media (max-width: 480px) {
            .top_navs {
                gap: 1rem;
                font-size: 10px;
                letter-spacing: 2px;
            }

            .social-links .image {
                max-width: 50px;
            }
        }

    </style>

    <body>
        <p>
            I'd love to hear from you!  Please feel free to message me at either of the below email addresses
        and to connect via social media platforms.
        </p>

        <br>
        
        <h1>
            academic and professional
        </h1>
        <p>
            anna.hunt-isaak@mail.mcgill.ca <br> For discussions regarding my research, body of work, and 
            any academic or professional opportunities.
        </p>

        <br>

        <h1>
            personal
        </h1>
        <p>
            annahuntisaak@gmail.com <br> For all other subject matter.
        </p>

        <br><br><br><br>

        <div class="social-links">
            <a href="https://www.linkedin.com/in/anna-rose-hunt-isaak">
                <Image src={linkedin} alt="linkedin logo" class="image" quality={100}/>
            </a>

            <a href="https://www.instagram.com/annameigui/">
                <Image src={instagram} alt="instagram logo" class="image" quality={100}/>
            </a>
        </div>

    </body>

</html>