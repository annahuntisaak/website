---
import '../styles/global.css';

import { Image } from 'astro:assets';
import instagram from '../assets/contact/insta_b.png';
import linkedin from '../assets/contact/linked_b.png';

const pageTitle = "contact";
---

<nav class="nav-horizontal">
	<a href="/">home</a>
	<a href="/research/">research</a>
	<a href="/traditional art/">traditional art</a>
	<a href="/photography/">photography</a>
	<a href="/contact/">contact</a>
</nav>


<html lang = "en"> 
    <head>
        <meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
    </head>

    <style>
        /* Use Pico's responsive layout */
        body {
            padding-top: 4rem;
        }

        /* Link styling */
        a {
            text-decoration: none;    
        }

        /* Social media links */
        .social-links {
            display: flex;
            gap: 1rem;
            align-items: center;
            margin-top: 2rem;
            justify-content: flex-start;
        }

        .social-links img {
            max-width: 60px;
            height: auto;
        }

        /* Mobile adjustments */
        @media (max-width: 768px) {
            .social-links {
                justify-content: center;
                flex-wrap: wrap;
            }
            
            .social-links img {
                max-width: 50px;
            }
        }
    </style>

    <body>
        <div class="container">
            <p>
                I'd love to hear from you!  Please feel free to message me at either of the below email addresses
            and to connect via social media platforms.
            </p>

            <br>
            
            <h1>
                academic and professional
            </h1>
            <p>
                anna.hunt-isaak@mail.mcgill.ca <br> For discussions regarding my research, body of work, and 
                any academic or professional opportunities.
            </p>

            <br>

            <h1>
                personal
            </h1>
            <p>
                annahuntisaak@gmail.com <br> For all other subject matter.
            </p>

            <br><br><br><br>

            <div class="social-links">
                <a href="https://www.linkedin.com/in/anna-rose-hunt-isaak">
                    <Image src={linkedin} alt="linkedin logo" quality={100}/>
                </a>

                <a href="https://www.instagram.com/annameigui/">
                    <Image src={instagram} alt="instagram logo" quality={100}/>
                </a>
            </div>
        </div>
    </body>

</html>