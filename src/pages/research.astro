    <style>
        /* Use Pico's responsive layout */
        body {
            padding-top: 4rem;
        }

        /* Link styling */
        a {
            text-decoration: none;      
            color: rgb(175, 159, 148);           
        }

        /* Research images container */
        .research-images {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.1rem;
            margin-top: 1rem;
        }

        .research-images img {
            width: 100%;
            height: auto;
        }

        /* Mobile adjustments */
        @media (max-width: 768px) {
            .research-images {
                grid-template-columns: 1fr;
                justify-items: center;
            }
            
            .research-images a {
                max-width: 300px;
            }
        }
    </style>
 

