---
import '../styles/global.css';

import { Image } from 'astro:assets';
import first from '../assets/research/first.jpg';
import poster from '../assets/research/poster.jpg';

const pageTitle = "research";
---

<nav class = "top_navs">
	<a href="/">home</a>
	<a href="/research/">research</a>
	<a href="/traditional art/">traditional art</a>
	<a href="/photography/">photography</a>
	<a href="/contact/">contact</a>
</nav>


<html lang = "en"> 
    <head>
        <meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
    </head>

    <style>

        /* NAVIGATION BUTTONS */
        .top_navs {
            /* placing navigation buttons where desired */
            position: sticky;
            top: 2rem;
            display: flex;
            flex-direction: row; 
            justify-content: center;
            margin-bottom: clamp(3rem, 6vw, 5rem);
            z-index: 10;

            /* spacing between buttons and of the lettering */
            font-size: clamp(10px, 1.8vw, 12px);
            gap: clamp(2rem, 4vw, 5rem);  
            letter-spacing: 4.5px;   
            
            /* to prevent buttons from being underlined or changing color */
            text-decoration: none;
        }

        .top_navs a{
            text-decoration: none;
            color: rgb(175, 159, 148);
        }

        a {
            text-decoration: none;      
            color: rgb(175, 159, 148);           
        }

        .research-images {
            display: flex;
            gap: clamp(0.5rem, 2vw, 1.1rem);
            margin-top: 1rem;
            flex-wrap: wrap;
        }

        .image{
            flex: 1;
            max-width: 100%;
            height: auto;
            object-fit: cover;
        }

        /* Mobile responsive adjustments */
        @media (max-width: 768px) {
            .top_navs {
                flex-wrap: wrap;
                gap: clamp(1rem, 3vw, 2rem);
                padding: 0 1rem;
            }

            .research-images {
                flex-direction: column;
                align-items: center;
            }

            .image {
                max-width: 300px;
            }
        }

        @media (max-width: 480px) {
            .top_navs {
                gap: 1rem;
                font-size: 10px;
                letter-spacing: 2px;
            }
        }


    </style>
 

