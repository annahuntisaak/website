import sink from '../assets/film/sink.jpg';
import street from '../assets/film/street.jpg';
import sunset from '../assets/film/sunset.jpg';
import tea from '../assets/film/tea.jpg';
import tofu from '../assets/film/tofu.jpg';
import treewater from '../assets/film/tree_water.jpg';
import duketrees from '../assets/film/trees.jpg';
import trinkets from '../assets/film/trinkets.jpg';
import village from '../assets/film/village.jpg';
import water from '../assets/film/water.jpg';
import wedding from '../assets/film/wedding.jpg';
import zoe from '../assets/film/zoe.jpg';

const pageTitle = "photography";
---

<nav class="nav-horizontal">
	<a href="/">home</a>
	<a href="/research/">research</a>
	<a href="/traditional art/">traditional art</a>
	<a href="/photography/">photography</a>
	<a href="/contact/">contact</a>
</nav>


<html lang = "en"> 
    <head>
        <meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
    </head>

    <style>
		/* Use Pico's container for responsive layout */
		body {
			padding-top: 4rem;
		}

		.full_gallery {
			max-width: 1200px;
			margin: 0 auto;
		}

		/* Responsive image galleries using CSS Grid */
		.gallery-grid {
			margin-bottom: 1rem;
		}

		@media (max-width: 768px) {
			.gallery-row-2,
			.gallery-row-3 {
				grid-template-columns: 1fr !important;
			}
		}
    </style>


	<body>
		<div class="container full_gallery">

			<div class="gallery-grid gallery-row-3">
				<Image src = {lightpost} alt = "poster" quality={100} />
				<Image src = {hotdog} alt = "poster" quality={100} />
				<Image src = {leaves} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-2">
				<Image src = {annex} alt = "poster" quality={100} />
				<Image src = {trinkets} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-1">
				<Image src = {grammy} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-2">
				<Image src = {house} alt = "poster" quality={100} />
				<Image src = {bedroom} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-1">
				<Image src = {dinner} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-3">
				<Image src = {water} alt = "poster" quality={100} />
				<Image src = {wedding} alt = "poster" quality={100} />
				<Image src = {stairs} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-2">
				<Image src = {dukeonetree} alt = "poster" quality={100} />
				<Image src = {pond} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-1">
				<Image src = {zoe} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-2">
				<Image src = {md} alt = "poster" quality={100} />
				<Image src = {ml} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-3">
				<Image src = {sink} alt = "poster" quality={100} />
				<Image src = {market} alt = "poster" quality={100} />
				<Image src = {tofu} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-1">
				<Image src = {duketrees} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-2">
				<Image src = {rocks} alt = "poster"  quality={100} />
				<Image src = {kitchen} alt = "poster"  quality={100} />
			</div>

			<div class="gallery-grid gallery-row-3">
				<Image src = {village} alt = "poster" quality={100} />
				<Image src = {bench} alt = "poster" quality={100} />
				<Image src = {dorm} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-2">
				<Image src = {office} alt = "poster"  quality={100} />
				<Image src = {cat} alt = "poster"  quality={100} />
			</div>

			<div class="gallery-grid gallery-row-1">
				<Image src = {treewater} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-2">
				<Image src = {golden} alt = "poster"  quality={100} />
				<Image src = {street} alt = "poster"  quality={100} />
			</div>

			<div class="gallery-grid gallery-row-1">
				<Image src = {bikes} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-3">
				<Image src = {beach} alt = "poster" quality={100} />
				<Image src = {tea} alt = "poster" quality={100} />
				<Image src = {sunset} alt = "poster" quality={100} />
			</div>

			<div class="gallery-grid gallery-row-1">
				<Image src = {mountain} alt = "poster" quality={100} />
			</div>

		</div>
	</body>

</html>