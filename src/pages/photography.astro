    <style>

        /* NAVIGATION BUTTONS */
        .top_navs {
            /* placing navigation buttons where desired */
            position: sticky;
            top: 2rem;
            display: flex;
            flex-direction: row; 
            justify-content: center;
            margin-bottom: clamp(3rem, 6vw, 5rem);
            z-index: 10;

            /* spacing between buttons and of the lettering */
            font-size: clamp(10px, 1.8vw, 12px);
            gap: clamp(2rem, 4vw, 5rem);  
            letter-spacing: 4.5px;   
            
            /* to prevent buttons from being underlined or changing color */
            text-decoration: none;
        }

        .top_navs a{
            text-decoration: none;
            color: rgb(175, 159, 148);
        }

		/* RESPONSIVE GALLERY */
		.full_gallery {
			padding: 0 clamp(1rem, 4vw, 3rem);
			max-width: 1200px;
			margin: 0 auto;
		}

		.row {
			display: grid;
			justify-content: center;
			align-items: center;
			gap: clamp(0.5rem, 2vw, 1rem);
			margin-bottom: clamp(0.5rem, 2vw, 1rem);
			width: 100%;
		}

		/* Different grid layouts for different row types */
		.row-3 {
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		}

		.row-2 {
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		}

		.row-1 {
			grid-template-columns: 1fr;
			justify-items: center;
		}

		/* Mobile responsive adjustments */
		@media (max-width: 768px) {
			.top_navs {
				flex-wrap: wrap;
				gap: clamp(1rem, 3vw, 2rem);
				padding: 0 1rem;
			}

			.row-3,
			.row-2 {
				grid-template-columns: 1fr;
			}
		}

		@media (max-width: 480px) {
			.top_navs {
				gap: 1rem;
				font-size: 10px;
				letter-spacing: 2px;
			}
		}

    </style>


	<body>
