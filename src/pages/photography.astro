import dinner from '../assets/film/dinner.jpg';
import golden from '../assets/film/golden.jpg';
import grammy from '../assets/film/grammy.jpg';
import hotdog from '../assets/film/hotdog.jpg';
import house from '../assets/film/house.jpg';
import kitchen from '../assets/film/kitchen.jpg';
import leaves from '../assets/film/leaves.jpg';
import lightpost from '../assets/film/lightpost.jpg';
import market from '../assets/film/market.jpg';
import mountain from '../assets/film/mountain.jpg';
import bedroom from '../assets/film/mtl_night.jpg';
import md from '../assets/film/museum_dark.jpg';
